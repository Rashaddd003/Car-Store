                    <hr class="short-hr" />


                <h4>Fuel economy</h4>
                <hr class="faded" />
                        <p>Fuel</p>         <!-- Fuel-->
                        <p class="number">@Model.DT_N.Rows[0]["Fuel"]</p>
            </div>
        </div>
    </div>



</div>
</div>
}

