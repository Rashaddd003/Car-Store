                <i class="fa-sharp fa-solid fa-star"></i>
                <i class="fa-sharp fa-solid fa-star"></i>
            </div>
            <div class="product">
                <div class="image">
                            <img src="@Model.DT_N.Rows[0]["C_image1"]" alt="" />
                    <span>new</span>
                </div>
                <div class="discription">
                    <h2>Description</h2>
                    <p class="description-text">
                                @Model.DT_N.Rows[0]["CarDescription"]
